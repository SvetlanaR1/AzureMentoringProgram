@using WebApplication.Models
@model IEnumerable<ImagesTableModel>

@{
    ViewBag.Title = "Image gallery";
}

<h2>Image gallery</h2>

<p>
    @Html.ActionLink("Create New Record", "Upload", "Blob")
</p>
<table class="table table-striped">
    <tr>
        <th style="width:20%; text-align:center">
            @Html.DisplayNameFor(model => model.Group)
        </th>
        <th style="width:20%; text-align:center">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="width:20%; text-align:center">
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th style="width:25%; text-align:center">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width:20%; margin:1% 1% 1% 1%">
                @Html.DisplayFor(modelItem => item.Group)
            </td>
            <td style="width:20%; margin:1% 1% 1% 1%">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="width:20%; margin:1% 1% 1% 1%">
                <img src="@item.URL" alt="@item.URL" style="height:100px; width: auto;" />
            </td>
            <td style="width:25%; padding:0 0 0 5%">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td style="margin:1% 1% 1% 1%">
                @Html.ActionLink("Edit", "Edit", new { name = item.Name, group = item.Group }) |
                @Html.ActionLink("Delete", "ConfirmDelete", new { name = item.Name, group = item.Group })
            </td>
        </tr>
    }

</table>

